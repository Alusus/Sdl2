اشمل "مـتم/طـرفية.أسس"؛
اشمل "مـتم/نـظام.أسس"؛
اشمل "مـتم/نـم.أسس"؛
اشمل "../طـوب.أسس"؛

إذا طـوب.هيئ(طـوب._تهيئة_عصا_التحكم_) == 0 {
  مـتم.طـرفية.اطبع("تمت تهيئة مكتبة طبقة الوسائط البسيطة بنجاح\ج")؛
  إذا طـوب.عـصا_التحكم.هات_عددها() > 0 {
    عرف عصا: مؤشر[طـوب.عـصا_التحكم]؛
    عصا = طـوب.عـصا_التحكم.افتح(0)؛
    إذا عصا != 0 {
      مـتم.طـرفية.اطبع("عدد المحاور للعصا 0: %d.\ج"، طـوب.عـصا_التحكم.هات_عدد_المحاور(عصا))؛
      بينما 1 {
        طـوب.عـصا_التحكم.حدث()؛
        مـتم.طـرفية.اطبع("  ")؛
        مـتم.طـرفية.اطبع(طـوب.عـصا_التحكم.هات_محور(عصا، 0)~مثل[صـحيح])؛
        مـتم.طـرفية.اطبع("، %d"، طـوب.عـصا_التحكم.هات_محور(عصا، 1)~مثل[صـحيح])؛
        مـتم.طـرفية.اطبع("         \r")؛
        مـتم.نـم.اطلق(0~مثل[مؤشر[مـتم.نـم.مـلف]])؛
        مـتم.نـظام.نم(1000)؛
      }
    } وإلا {
      مـتم.طـرفية.اطبع("فشل فتح عصا التحكم.\ج")؛
    }
  } وإلا {
    مـتم.طـرفية.اطبع("لم نجد أي عصا تحكم.\ج")؛
  }
} وإلا {
  مـتم.طـرفية.اطبع("فشلت تهيئة مكتبة طبقة الوسائط البسيطة.\ج")؛
}

